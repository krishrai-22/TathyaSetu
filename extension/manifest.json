{
  "manifest_version": 3,
  "name": "TathyaSetu - AI Fact Checker",
  "version": "1.0.0",
  "description": "Verify misinformation and bias instantly using Gemini 3 Pro.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Verify with TathyaSetu"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}